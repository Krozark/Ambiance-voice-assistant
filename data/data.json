{
    "pipeline": {
        "kwargs": {
            "audio_input": false,
            "debug_audio": false,
            "debug_tts": false,
            "token_strategy": 0
        }
    },
    "types": {
        "TTS": {
            "class": "Ava.action.TTSAction",
            "args": [],
            "kwargs": {}
        }
    },
    "register": [
        {
            "tokens": {
                "tokens": ["1", "$search"],
                "regex": {
                    "$search": {
                        "regex": "\\d",
                        "multiple": true
                    }
                }
            },
            "type": {
                "type": "Action:TTS",
                "args": "1 $search={search}"
            }
        }
    ],
    "_comment": [
