            "tokens": "coucou",
            "type": {
                "type": "Action:TTS",
                "args": "Tu veux voir ma bite ?"
            }
        },
        {
            "tokens": {
                "tokens": ["cherche", "sur", "internet", "$search"],
                "regex": {
                    "$search": "\\w+"
                }
            },
            "type": "Action:WebBrowserSearch"
        },
        {
            "tokens": {
                "tokens": ["cherche", "sur", "duckduckgo", "$sentence"],
                "regex": {
                    "$sentence": {
                        "regex": "\\w+",
                        "multiple": true
                    }
                }
            },
            "type": {
