{
    "config": {
        "languages": {
            "current": "fr",
            "fr": {
                "recognition": "fr-FR",
                "voice": "french-mbrola-1",
                "nltk": "french",
                "input-file": "data/text-francais-utf8.txt",
                "spacy": "fr_core_news_md",
                "wikipedia": "fr"
            }
        },
        "api-keys": {
            "google_recognition": null
        },
        "logging": {
            "version": 1,
            "disable_existing_loggers": true,
            "formatters": {
                "brief": {
                    "format": "%(message)s"
                },
                "console_formatter": {
                    "format": "[%(asctime)s][%(name)s:l.%(lineno)d][%(levelname)s] - %(message)s",
                     "datefmt": "%Y-%m-%d %H:%M:%S"
                }
            },
            "handlers": {
                "console": {
                    "level": "DEBUG",
                    "class": "logging.StreamHandler",
                    "formatter": "console_formatter",
                    "stream": "ext://sys.stdout"
                }
            },
            "loggers": {
                "Ava": {
                    "handlers": [
                        "console"
                    ],
                    "level": "DEBUG",
                    "propapate": true
                }
            }
        },
        "audio_as_text": true
    },
    "pipeline": {
            "kwargs": {
            "audio_input": false,
            "debug_audio": false,
            "debug_tts": false,
            "token_strategy": 0
        }
    },
    "types": {
        "...": "include(include/types.json)"
    },
    "register": [
        {
            "tokens": "ordinateur",
            "type": {
                "type": "Ava:Mod",
                "kwargs": {
                    "enter": {
                        "tokens": "",
                        "type": {
                            "type": "Ava:Action:TTS",
                            "args": "Oui?"
                        }
                    },
                    "exit":  {
                        "tokens": "Merci",
                        "type": {
                            "type": "Ava:Action:TTS",
                            "args": "Derien."
                        }
                    }
                }
            },
            "register": [
                {
                    "tokens": {
                        "tokens": ["répète", "$search"],
                        "regex": {
                            "$search": {
                                "regex":"\\w+",
                                "multiple": true
                            }
                        }
                    },
                    "type": {
                        "type": "Ava:Action:TTS",
                        "args": "Je répète : {search}"
                    }
                },
                {
                    "tokens": {
                        "tokens": ["$search"],
                        "regex": {
                            "$search": {
                                "regex":"\\w+",
                                "multiple": true
                            }
                        }
                    },
                    "type": {
                        "type": "Ava:Action:TTS",
                        "args": "J'ai pas compris: {search}"
                    }
                },
                {
                    "tokens": {
                        "tokens": "Comment tu t'appelles"
                    },
                    "type": {
                        "type": "Ava:Action:TTS",
                        "args": "Mon nom est Ambiance voice assistant, ou Ava."
                    }
                },
                {
                    "tokens": "Qui t'a créé",
                    "type": {
                        "type": "Ava:Action:TTS",
                        "args": "Maxime Barbier"
                    }
                },
                {
                    "tokens": "Qui est maxime barbier",
                    "type": {
                        "type": "Ava:Action:TTS",
                        "args": "Mon créateur."
                    }
                },
                {
                    "tokens": "Il est quelle heure",
                    "type": {
                        "type": "Ava:Action:TTS",
                        "args": "Il est {now.tm_hour} heure {now.tm_min} minutes{suffix}.",
                        "kwargs": {
                            "_python": [
                                "import time",
                                "now = time.localtime()",
                                "suffix=\"\"",
                                "if now.tm_hour >= 18 and now.tm_hour < 21:",
                                " suffix=\", l'heure de l'appero!\""
                            ]
                        }
                    }
                },
                {
                    "tokens": {
                        "tokens": ["affiche", "sur", "internet", "$search"],
                        "regex": {
                            "$search": {
                                "regex":"\\w+",
                                "multiple": true
                            }
                        }
                    },
                    "type": "Ava:Action:WebBrowserSearch"
                },
                {
                    "tokens": {
                        "tokens": ["affiche", "sur", "wikipédia", "$search"],
                        "regex": {
                            "$search": {
                                "regex":"\\w+",
                                "multiple": true
                            }
                        }
                    },
                    "type": "Ava:Action:WikipediaSearch"
                },
                {
                    "tokens": {
                        "tokens": ["c'est", "quoi", "$search"],
                        "regex": {
                            "$search": {
                                "regex":"\\w+",
                                "multiple": true
                            }
                        }
                    },
                    "type": "Ava:Action:WikipediaSearchTTS"
                },
                {
                    "tokens": {
                        "tokens": ["cherche", "sur", "wikipédia", "$search"],
                        "regex": {
                            "$search": {
                                "regex":"\\w+",
                                "multiple": true
                            }
                        }
                    },
                    "type": "Ava:Action:WikipediaSearchTTS"
                }
            ]
        },
        {
            "tokens": "au revoir",
            "type": "Ava:Action:Stop"
        }
    ]
}