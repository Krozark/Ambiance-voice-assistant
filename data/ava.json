{
    "config": {
        "languages": {
            "current": "fr",
            "fr": {
                "vosk-model": "https://alphacephei.com/vosk/models/vosk-model-fr-0.6-linto.zip",
                "input-file": "data/lang/fr/text-utf8.txt",
                "nltk": "french",
                "spacy": "fr_core_news_md",
                "wikipedia": "fr",
                "_platform": {
                    "linux": {
                        "tts": "french-mbrola-1"
                    },
                    "android": {
                        "tts": "FRANCE",
                        "vosk-model": "https://alphacephei.com/vosk/models/vosk-model-small-fr-pguyot-0.3.zip"
                    }
                }
            }
        },
        "logging": {
            "version": 1,
            "disable_existing_loggers": true,
            "formatters": {
                "brief": {
                    "format": "%(message)s"
                },
                "console_formatter": {
                    "format": "[%(asctime)s][%(name)s:l.%(lineno)d][%(levelname)s] - %(message)s",
                     "datefmt": "%Y-%m-%d %H:%M:%S"
                }
            },
            "handlers": {
                "console": {
                    "level": "DEBUG",
                    "class": "logging.StreamHandler",
                    "formatter": "console_formatter",
                    "stream": "ext://sys.stdout"
                }
            },
            "loggers": {
                "Ava": {
                    "handlers": [
                        "console"
                    ],
                    "level": "DEBUG",
                    "propapate": true
                }
            }
        },
        "audio_as_text": false,
        "token_strategy": 1
    },
    "sound-player": {
        "music": {
            "description": "Main sound",
            "concurency": 1,
            "replace": true,
            "loop": 0
        },
        "tone": {
            "description": "alteration of the music",
            "concurency": 1,
            "replace": true,
            "loop": 0
        },
        "backgroud": {
            "description": "weather conditions, people talking ...",
            "concurency": 2,
            "replace": true,
            "loop": 0
        },
        "event": {
            "description": "brief effect with strong impact",
            "concurency": 10,
            "replace": true
        }
    },
    "pipeline": {
            "kwargs": {
            "text_input": "audio",
            "debug_audio": false,
            "debug_tts": false
        }
    },
    "types": {
      "TTS": {
          "class": "Ava.action.TTSAction",
          "args": [],
          "kwargs": {}
        }
    }
}
